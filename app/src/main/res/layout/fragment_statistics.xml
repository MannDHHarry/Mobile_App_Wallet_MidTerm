<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Statistics Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorDarkPurple"
                android:layout_marginBottom="20dp"/>

            <!-- Transaction Type Selection -->
            <RadioGroup
                android:id="@+id/rgTransactionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rbExpense"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/radio_button_expense"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Expense"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <RadioButton
                    android:id="@+id/rbIncome"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/radio_button_income"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Income"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </RadioGroup>

            <!-- Date Range Selection -->


            <!-- Month Navigation (Visible by default) -->
            <LinearLayout
                android:id="@+id/llMonthNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnPreviousMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="← Previous"
                    android:padding="8dp"
                    android:background="@drawable/rounded_button_purple"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvMonthYear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="October 2025"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btnNextMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Next →"
                    android:padding="8dp"
                    android:background="@drawable/rounded_button_purple"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Pie Chart -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="24dp"/>

            <!-- Summary Report Section -->
            <TextView
                android:id="@+id/tvSummaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expense Summary (October 2025)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorDarkPurple"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: Rs. 0.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvCategoryBreakdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakdown:\nNo transactions in this period"
                android:textColor="@color/text_black"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>