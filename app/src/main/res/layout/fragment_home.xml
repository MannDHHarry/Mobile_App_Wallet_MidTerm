<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- 3. Changed to androidx.cardview.widget.CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginEnd="@dimen/padding_standard"
            android:layout_marginBottom="@dimen/padding_standard"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_corner_radius">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                android:background="@drawable/balance_card_gradient">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_balance"
                        android:textColor="#EF8767"
                        android:textSize="@dimen/text_size_large"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tvTotalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2,343.23"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/padding_small"
                    android:layout_marginBottom="@dimen/padding_standard" />

                <!-- Income and Expense Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/padding_standard">

                    <!-- Income -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↓"
                            android:textSize="18sp"
                            android:textColor="@color/income_green"
                            android:layout_marginEnd="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/income"
                                android:textColor="#EF8767"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvIncome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$3,000"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Expense -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="↑"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:layout_marginEnd="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/expense"
                                android:textColor="#EF8767"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvExpense"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$657"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Time Indicator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_marginBottom="@dimen/padding_small" />

                <TextView
                    android:id="@+id/tvTimePeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month: Jan 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Wallets Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_standard"
            android:paddingEnd="@dimen/padding_standard"
            android:paddingBottom="@dimen/padding_standard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_wallets"
                    android:textColor="#5A3F61"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <ImageButton
                    android:id="@+id/btnAddWallet"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#5A3F61"
                    android:contentDescription="@string/add" />
            </RelativeLayout>

            <!-- 4. Changed to androidx.recyclerview.widget.RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWallets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- Show More/Less Button -->
            <TextView
                android:id="@+id/btnShowMoreWallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_more"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_normal"
                android:padding="@dimen/padding_small"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

            <!-- Empty State Wallets -->
            <include
                android:id="@+id/emptyStateWallets"
                layout="@layout/empty_state_wallets"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Recent Transactions Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_standard"
            android:paddingEnd="@dimen/padding_standard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recent_transactions"
                    android:textColor="#5A3F61"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/btnViewAllTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_all"
                    android:textColor="#55385C"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/padding_small" />
            </RelativeLayout>

            <!-- 4. Changed to androidx.recyclerview.widget.RecyclerView -->

            <!-- Empty State Transactions -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <include
                android:id="@+id/emptyStateTransactions"
                layout="@layout/empty_state_transactions"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>